<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="end"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/alternate_conversion_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/target_currency_image"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/target_currency_title"
            android:layout_weight="2"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:textAllCaps="true"
            />

        <ImageButton
            android:id="@+id/flip_base_target_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/flip_arrows"
            />

        <TextView
            android:id="@+id/base_currency_title"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textAllCaps="true"
            />

        <ImageView
            android:id="@+id/base_currency_image"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />


        <TextView
            android:id="@+id/conversion_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/update_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:textStyle="italic"/>





</LinearLayout>